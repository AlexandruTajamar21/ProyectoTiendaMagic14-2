@model IEnumerable<ProyectoTiendaMagic.Models.ResumenCompra>

@{
    ViewData["Title"] = "MisCompras";
}

<img id="imgFondo" src="~/Fondos/Fondo2.jpg" />

@if (Model.Count() != 0)
{
    <table class="table table-striped mt-1">
        <thead class="table table-dark">
            <tr>
                <th>
                    Comprador
                </th>
                <th>
                    Vendedor
                </th>
                <th>
                    Item
                </th>
                <th>
                    Precio
                </th>
                <th>
                    Imagen
                </th>
            </tr>
        </thead>
        <tbody class="table ">
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.NombreComprador
                </td>
                <td>
                    @item.NombreVendedor
                </td>
                <td>
                    @item.IdProducto
                </td>
                <td>
                    @item.Precio€
                </td>
                <td>
                    <img src="~/Assets/Cartas/@item.Imagen" style="width:100px;height:150px"/>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

