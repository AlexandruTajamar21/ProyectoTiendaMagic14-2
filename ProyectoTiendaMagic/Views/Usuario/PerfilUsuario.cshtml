@model IEnumerable<ProyectoTiendaMagic.Models.Item>

@{
    ViewData["Title"] = "PerfilUsuario";
}

<div style="display: flex; justify-content: center;height:auto">
    <div style="right: 50px; left: 50px; background-color: white; top: 50px">
        <dl class="row">
            <dt class="col-sm-2" style="text-align:center">
                Nombre:
            </dt>
            <dd class="col-sm-10" style="text-align:center">
                @ViewData["Nombre"]
            </dd>
            <dt class="col-sm-2" style="text-align:center">
                Direccion:
            </dt>
            <dd class="col-sm-10" style="text-align:center">
                @ViewData["Direccion"]
            </dd>
            <dt class="col-sm-2" style="text-align:center">
                Correo:
            </dt>
            <dd class="col-sm-10" style="text-align:center">
                @ViewData["Correo"]
            </dd>
        </dl>
    </div>
</div>

<h1>Tus Cartas</h1>

<div>
    <div class="row row-cols-3 g-3 justify-content-center mt-2">
        @foreach (var item in Model)
        {
            <div class="col m-2" style="width: 286px;">
                <div class="card" style="width: 286px; height: 463px;">
                    <img class="img-fluid rounded" style="object-fit:cover; width: 286px; height: 463px;"
                         src="~/Assets/Cartas/@item.Imagen" alt="@item.Nombre" />
                    <div class="cartaAnimada card-img-overlay p-0 d-flex align-items-end">
                        <div class="ocultar-elemento-active col-12 p-3 text-center"
                             style="background-color: rgba(170,212,235,0.9); ">
                            <h5 class="card-title">@item.Nombre</h5>
                            <a class="btn btn-success" asp-controller="Home" asp-action="ModificarCartas" asp-route-idProducto="@item.IdProducto">Modificar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

@section style{
    <style>
        .ocultar-elemento-active {
            transition: all 1s ease-in-out;
            opacity: 0;
        }

        .ocultar-elemento-inactive {
            transition: all 1s ease-in-out;
            opacity: 1;
        }
    </style>
}

@section script{
    <script>
        $(document).ready(function () {
            $(".cartaAnimada").mouseover(function () {

                $(this).children().addClass("ocultar-elemento-inactive")
                $(this).children().removeClass("ocultar-elemento-active")
            });

            $(".cartaAnimada").mouseout(function () {

                $(this).children().addClass("ocultar-elemento-active")
                $(this).children().removeClass("ocultar-elemento-inactive")

            });
        });</script>

}
