@model IEnumerable<ProyectoTiendaMagic.Models.ViewProductoUsuario>

@{
    ViewData["Title"] = "PerfilUsuario";
}
<img id="imgFondo" src="~/Fondos/Fondo2.jpg" />
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div>
            <div>
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25"> <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image"> </div>
                                <h6 class="f-w-600">@ViewData["Nombre"]</h6>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Informacion</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400">@ViewData["Correo"]</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Direccion</p>
                                        <h6 class="text-muted f-w-400"></h6>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Tipo de Usuario</p>
                                        <h6 class="text-muted f-w-400">@ViewData["TipoUsuario"]</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <h1 class="row row-cols-3 g-3 justify-content-center mt-2">Inventario</h1>
</div>
<div>
    <div class="row row-cols-3 g-3 justify-content-center mt-2">
        @foreach (var item in Model)
        {
            <div class="col m-2" style="width: 286px;">
                <div class="card" style="width: 286px; height: 463px;">
                    <img class="img-fluid rounded" style="object-fit:cover; width: 286px; height: 463px;"
                         src="~/Assets/Cartas/@item.Imagen" alt="@item.Nombre" />
                    <div class="cartaAnimada card-img-overlay p-0 d-flex align-items-end">
                        <div class="ocultar-elemento-active col-12 p-3 text-center"
                             style="background-color: gray ">
                            <h5 class="card-title">@item.Nombre</h5>
                            <a class="btn btn-success" asp-controller="Home" asp-action="ModificarCartas" asp-route-idProducto="@item.IdProducto">Modificar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-info">Volver</a>
</div>

@section style{
    <style>
        .ocultar-elemento-active {
            transition: all 1s ease-in-out;
            opacity: 0;
        }

        .ocultar-elemento-inactive {
            transition: all 1s ease-in-out;
            opacity: 1;
        }
    </style>
}

@section script{
    <script>
        $(document).ready(function () {
            $(".cartaAnimada").mouseover(function () {

                $(this).children().addClass("ocultar-elemento-inactive")
                $(this).children().removeClass("ocultar-elemento-active")
            });

            $(".cartaAnimada").mouseout(function () {

                $(this).children().addClass("ocultar-elemento-active")
                $(this).children().removeClass("ocultar-elemento-inactive")

            });
        });</script>

