@model ProyectoTiendaMagic.Models.Item

@{
    ViewData["Title"] = "Vender";
}

<div class="row" id="outPopUp">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <input class="form-control" name="nombre" placeholder="Nombre" />
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="producto" placeholder="Producto" />
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="precio" placeholder="Precio" />
            </div>
            <div class="form-group">
                <input class="form-control" type="file" name="Imagen" placeholder="Imagen" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Descripcion" placeholder="Descripcion" />
            </div>
            <div>
                <button class="btn btn-info" type="submit">Registrar</button>
                <a asp-controller="Manage" asp-action="LogIn" class="btn btn-info">Login</a>
            </div>
            <div class="form-group">
                <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Exit</a>
            </div>
            <h1 style="color:red">@ViewData["MENSAJE"]</h1>
        </form>
    </div>
</div>
<style>
    #outPopUp {
        display: flex;
        justify-content: center;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
