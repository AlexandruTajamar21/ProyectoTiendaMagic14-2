@model IEnumerable<ProyectoTiendaMagic.Models.Item>

@{
    ViewData["Title"] = "Carrito";
}

@if (Model != null)
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdItem)
            </th>
            <th>
                Vendedor
            </th>
            <th>
                Producto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdItem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)€
                </td>
                <td><img src="~/Assets/Cartas/@item.Imagen" style="width:100px;height:150px"/></td>
                <td>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="BorrarElementoCarrito" asp-route-idCarta="@item.IdItem">Eliminar</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="ComprarCarrito" class="btn btn-success">Finalizar Compra</a>
}
else
{
    <h3 style="justify-content:center"> No tienes Elementos en el carrito</h3>
}