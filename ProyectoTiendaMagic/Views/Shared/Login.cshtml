@model ProyectoTiendaMagic.Models.Usuario

@{ ViewData["Title"] = "Login"; }
<div class="row" id="outPopUp">
    <div class="col-md-4">
        <form method="post">
            
            <div class="form-group">
                <input class="form-control" name="correo" placeholder="Correo Electronico" />
            </div>
            <div class="form-group">
                <input class="form-control" name="contraseña" placeholder="Contraseña" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Exit</a>
            </div>
        </form>
    </div>
</div>
<style>
    #outPopUp {
        display: flex;
        justify-content: center;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

